# Server Configuration
PORT=3001
NODE_ENV=development

# AI Provider Configuration (choose one)
AI_PROVIDER=groq  # Options: ollama, huggingface, groq, openai

# FREE AI Options (no cost):
# 1. Ollama (completely free, runs locally)
OLLAMA_URL=http://localhost:11434

# 2. Hugging Face (free tier with generous limits)
HUGGINGFACE_API_KEY=your_huggingface_token_here

# 3. Groq (free tier available)
GROQ_API_KEY=GROQ_API_KEY_REPLACED

# PAID AI Options:
# 4. OpenAI (has $5 free credit to start)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_PATH=./data/conversations.db

# Security
JWT_SECRET=your_jwt_secret_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
FRONTEND_URL=http://localhost:8080
